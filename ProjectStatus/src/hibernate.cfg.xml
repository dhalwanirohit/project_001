<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">TASK_MANAGER_DB</property>
    <property name="hibernate.connection.password">TASK_MANAGER_DB</property>
    <mapping resource="com/tm/hiber/model/TaskComments.hbm.xml"/>
    <mapping resource="com/tm/hiber/model/TaskPlan.hbm.xml"/>
    <mapping resource="com/tm/hiber/model/TaskMaster.hbm.xml"/>
    <mapping resource="com/tm/hiber/model/TaskOptions.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
